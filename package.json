{
  "name": "difport",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -- turbo run dev start:dev",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "license": "MIT",
  "devDependencies": {
    "dotenv-cli": "^7.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "stop-only": "^3.3.1",
    "turbo": "^1.8.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": "^7.0.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,json}": [
      "prettier --ignore-path ./.prettierignore --write",
      "eslint --fix",
      "stop-only --file"
    ],
    "packages/**/*.{ts,tsx,json}": [
      "prettier --ignore-path ./.prettierignore --write",
      "eslint --fix",
      "stop-only --file"
    ]
  }
}
